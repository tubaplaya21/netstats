                        <TextBlock x:Name="lblReg6" Text="Register 6" Grid.Column="6"
                                   Grid.Row="1" FontSize="11" Margin="5,0,5,0"  Foreground="{Binding LabelReg6}"
                                   HorizontalAlignment="Left" ToolTip="{Binding RegIp6}"/>

                        <TextBlock x:Name="lblReg7" Text="Register 7" Grid.Column="7"
                                   Grid.Row="1" FontSize="11" Margin="5,0,5,0" Foreground="{Binding LabelReg7}"
                                   HorizontalAlignment="Left" ToolTip="{Binding RegIp7}"/>

                        <TextBlock x:Name="lblReg8" Text="Register 8" Grid.Column="8"
                                   Grid.Row="1" FontSize="11" Margin="5,0,5,0" Foreground="{Binding LabelReg8}"
                                   HorizontalAlignment="Left" ToolTip="{Binding RegIp8}"/>

                        <TextBlock x:Name="lblReg9" Text="Register 9" Grid.Column="9"
                                   Grid.Row="1" FontSize="11" Margin="5,0,5,0" Foreground="{Binding LabelReg9}"
                                   HorizontalAlignment="Left" ToolTip="{Binding RegIp9}"/>

                        <TextBlock x:Name="lblReg10" Text="Register 10" Grid.Column="10"
                                   Grid.Row="1" FontSize="11" Margin="5,0,5,0" Foreground="{Binding LabelReg10}"
                                   HorizontalAlignment="Left" ToolTip="{Binding RegIp10}"/>

                        <TextBox Background="{Binding Reg1}" MinWidth="50" Grid.Column="1" BorderBrush="LightGray" BorderThickness="1"
                                 Grid.Row="2" FontSize="11" Margin="3,10,3,2" Cursor="Hand" IsReadOnly="True" Focusable="False"
                                 HorizontalAlignment="Left" 
                                 ToolTip="{Binding InfoReg1}" Height="25"
                                 Style="{StaticResource MaterialDesignTextBox}">
                            <TextBox.InputBindings>
                                <MouseBinding Command="{Binding ConnectDeviceCommand}" MouseAction="LeftClick"
                                              CommandParameter="Reg1"/>
                            </TextBox.InputBindings>
                            <TextBox.ContextMenu>
                                <ContextMenu>
                                    <ContextMenu.InputBindings>
                                    </ContextMenu.InputBindings>
                                    <MenuItem Header="Copy Service Info" Command="{Binding CopyCommand}"
                                              CommandParameter="Reg1" IsEnabled="{Binding InfoEnabledReg1}"/>
                                    <MenuItem Header="Connect to SMB" Command="{Binding SMBCommand}"
                                              CommandParameter="Reg1"/>
                                </ContextMenu>
                            </TextBox.ContextMenu>
                        </TextBox>

                        <TextBox Background="{Binding Reg2}" Width="50" Grid.Column="2" BorderBrush="LightGray" BorderThickness="1"
                                 Grid.Row="2" FontSize="11" Margin="3,10,3,2" Cursor="Hand" IsReadOnly="True" 
                                 HorizontalAlignment="Left" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 ToolTip="{Binding InfoReg2}" SelectionBrush="Transparent"
                                 Style="{StaticResource MaterialDesignTextBox}" Height="25">
                            <TextBox.InputBindings>
                                <MouseBinding Command="{Binding ConnectDeviceCommand}" MouseAction="LeftClick"
                                              CommandParameter="Reg2"/>
                            </TextBox.InputBindings>
                            <TextBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Copy Service Info" Command="{Binding CopyCommand}"
                                              CommandParameter="Reg2" IsEnabled="{Binding InfoEnabledReg2}"/>
                                    <MenuItem Header="Connect to SMB" Command="{Binding SMBCommand}"
                                              CommandParameter="Reg2"/>
                                </ContextMenu>
                            </TextBox.ContextMenu>
                        </TextBox>

                        <TextBox Background="{Binding Reg3}" Width="50" Grid.Column="3" BorderBrush="LightGray" BorderThickness="1"
                                 Grid.Row="2" FontSize="11" Margin="3,10,3,2" Cursor="Hand" IsReadOnly="True" 
                                 HorizontalAlignment="Left" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 ToolTip="{Binding InfoReg3}"
                                 Style="{StaticResource MaterialDesignTextBox}" Height="25">
                            <TextBox.InputBindings>
                                <MouseBinding Command="{Binding ConnectDeviceCommand}" MouseAction="LeftClick"
                                              CommandParameter="Reg3"/>
                            </TextBox.InputBindings>
                            <TextBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Copy Service Info" Command="{Binding CopyCommand}"
                                              CommandParameter="Reg3" IsEnabled="{Binding InfoEnabledReg3}"/>
                                    <MenuItem Header="Connect to SMB" Command="{Binding SMBCommand}"
                                              CommandParameter="Reg3"/>
                                </ContextMenu>
                            </TextBox.ContextMenu>
                        </TextBox>

                        <TextBox Background="{Binding Reg4}" Width="50" Grid.Column="4" BorderBrush="LightGray" BorderThickness="1"
                                 Grid.Row="2" FontSize="11" Margin="3,10,3,2" Cursor="Hand" IsReadOnly="True" 
                                 HorizontalAlignment="Left" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 ToolTip="{Binding InfoReg4}"
                                 Style="{StaticResource MaterialDesignTextBox}" Height="25">
                            <TextBox.InputBindings>
                                <MouseBinding Command="{Binding ConnectDeviceCommand}" MouseAction="LeftClick"
                                              CommandParameter="Reg4"/>
                            </TextBox.InputBindings>
                            <TextBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Copy Service Info" Command="{Binding CopyCommand}"
                                              CommandParameter="Reg4" IsEnabled="{Binding InfoEnabledReg4}"/>
                                    <MenuItem Header="Connect to SMB" Command="{Binding SMBCommand}"
                                              CommandParameter="Reg4"/>
                                </ContextMenu>
                            </TextBox.ContextMenu>
                        </TextBox>

                        <TextBox Background="{Binding Reg5}" Width="50" Grid.Column="5" BorderBrush="LightGray" BorderThickness="1"
                                 Grid.Row="2" FontSize="11" Margin="3,10,3,2"  Cursor="Hand" IsReadOnly="True" 
                                 HorizontalAlignment="Left" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 ToolTip="{Binding InfoReg5}" 
                                 Style="{StaticResource MaterialDesignTextBox}" Height="25">
                            <TextBox.InputBindings>
                                <MouseBinding Command="{Binding ConnectDeviceCommand}" MouseAction="LeftClick"
                                              CommandParameter="Reg5"/>
                            </TextBox.InputBindings>
                            <TextBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Copy Service Info" Command="{Binding CopyCommand}"
                                              CommandParameter="Reg5" IsEnabled="{Binding InfoEnabledReg5}"/>
                                    <MenuItem Header="Connect to SMB" Command="{Binding SMBCommand}"
                                              CommandParameter="Reg5"/>
                                </ContextMenu>
                            </TextBox.ContextMenu>
                        </TextBox>

                        <TextBox Background="{Binding Reg6}" Width="50" Grid.Column="6" BorderBrush="LightGray" BorderThickness="1"
                                 Grid.Row="2" FontSize="11" Margin="3,10,3,2"  Cursor="Hand" IsReadOnly="True" 
                                 HorizontalAlignment="Left" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 ToolTip="{Binding InfoReg6}"
                                 Style="{StaticResource MaterialDesignTextBox}" Height="25">
