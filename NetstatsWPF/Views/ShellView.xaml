                                    <MenuItem Header="Connect to SMB" Command="{Binding SMBCommand}"
                                              CommandParameter="Reg6"/>
                                </ContextMenu>
                            </TextBox.ContextMenu>
                        </TextBox>

                        <TextBox Background="{Binding Reg7}" Width="50" Grid.Column="7" BorderBrush="LightGray" BorderThickness="1"
                                 Grid.Row="2" FontSize="11" Margin="3,10,3,2"  Cursor="Hand" IsReadOnly="True" 
                                 HorizontalAlignment="Left" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 ToolTip="{Binding InfoReg7}"
                                 Style="{StaticResource MaterialDesignTextBox}" Height="25">
                            <TextBox.InputBindings>
                                <MouseBinding Command="{Binding ConnectDeviceCommand}" MouseAction="LeftClick"
                                              CommandParameter="Reg7"/>
                            </TextBox.InputBindings>
                            <TextBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Copy Service Info" Command="{Binding CopyCommand}"
                                              CommandParameter="Reg7" IsEnabled="{Binding InfoEnabledReg7}"/>
                                    <MenuItem Header="Connect to SMB" Command="{Binding SMBCommand}"
                                              CommandParameter="Reg7"/>
                                </ContextMenu>
                            </TextBox.ContextMenu>
                        </TextBox>

                        <TextBox Background="{Binding Reg8}" Width="50" Grid.Column="8" BorderBrush="LightGray" BorderThickness="1"
                                 Grid.Row="2" FontSize="11" Margin="3,10,3,2"  Cursor="Hand" IsReadOnly="True" 
                                 HorizontalAlignment="Left" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 ToolTip="{Binding InfoReg8}"
                                 Style="{StaticResource MaterialDesignTextBox}" Height="25">
                            <TextBox.InputBindings>
                                <MouseBinding Command="{Binding ConnectDeviceCommand}" MouseAction="LeftClick"
                                              CommandParameter="Reg8"/>
                            </TextBox.InputBindings>
                            <TextBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Copy Service Info" Command="{Binding CopyCommand}"
                                              CommandParameter="Reg8" IsEnabled="{Binding InfoEnabledReg8}"/>
                                    <MenuItem Header="Connect to SMB" Command="{Binding SMBCommand}"
                                              CommandParameter="Reg8"/>
                                </ContextMenu>
                            </TextBox.ContextMenu>
                        </TextBox>

                        <TextBox Background="{Binding Reg9}" Width="50" Grid.Column="9" BorderBrush="LightGray" BorderThickness="1"
                                 Grid.Row="2" FontSize="11" Margin="3,10,3,2"  Cursor="Hand" IsReadOnly="True" 
                                 HorizontalAlignment="Left" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 ToolTip="{Binding InfoReg9}"
                                 Style="{StaticResource MaterialDesignTextBox}" Height="25">
                            <TextBox.InputBindings>
                                <MouseBinding Command="{Binding ConnectDeviceCommand}" MouseAction="LeftClick"
                                              CommandParameter="Reg9"/>
                            </TextBox.InputBindings>
                            <TextBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Copy Service Info" Command="{Binding CopyCommand}"
                                              CommandParameter="Reg9" IsEnabled="{Binding InfoEnabledReg9}"/>
                                    <MenuItem Header="Connect to SMB" Command="{Binding SMBCommand}"
                                              CommandParameter="Reg9"/>
                                </ContextMenu>
                            </TextBox.ContextMenu>
                        </TextBox>

                        <TextBox Background="{Binding Reg10}" Width="50" Grid.Column="10" BorderBrush="LightGray" BorderThickness="1"
                                 Grid.Row="2" FontSize="11" Margin="3,10,3,2"  Cursor="Hand" IsReadOnly="True" 
                                 HorizontalAlignment="Left" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 ToolTip="{Binding InfoReg10}"
                                 Style="{StaticResource MaterialDesignTextBox}" Height="25">
                            <TextBox.InputBindings>
                                <MouseBinding Command="{Binding ConnectDeviceCommand}" MouseAction="LeftClick"
                                              CommandParameter="Reg10"/>
                            </TextBox.InputBindings>
                            <TextBox.ContextMenu>
