                                    <MenuItem Header="Connect to SMB" Command="{Binding SMBCommand}"
                                              CommandParameter="Reg10"/>
                                </ContextMenu>
                            </TextBox.ContextMenu>
                        </TextBox>

                        <TextBox x:Name="ReplyReg1" Grid.Column="1" Grid.Row="3" Width="50" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 FontSize="11" Margin="3" BorderBrush="LightGray" BorderThickness="1"
                                 HorizontalAlignment="Left" Cursor="Arrow" IsReadOnly="True" TextAlignment="Center"
                                 Style="{StaticResource MaterialDesignTextBox}" Height="25"/>

                        <TextBox x:Name="ReplyReg2" Grid.Column="2" Grid.Row="3" Width="50" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 FontSize="11" Margin="3" BorderBrush="LightGray" BorderThickness="1"
                                 HorizontalAlignment="Left" Cursor="Arrow" IsReadOnly="True" TextAlignment="Center"
                                 Style="{StaticResource MaterialDesignTextBox}" Height="25"/>

                        <TextBox x:Name="ReplyReg3" Grid.Column="3" Grid.Row="3" Width="50" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 FontSize="11" Margin="3" BorderBrush="LightGray" BorderThickness="1"
                                 HorizontalAlignment="Left" Cursor="Arrow" IsReadOnly="True" TextAlignment="Center"
                                 Style="{StaticResource MaterialDesignTextBox}" Height="25"/>

                        <TextBox x:Name="ReplyReg4" Grid.Column="4" Grid.Row="3" Width="50" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 FontSize="11" Margin="3" BorderBrush="LightGray" BorderThickness="1"
                                 HorizontalAlignment="Left" Cursor="Arrow" IsReadOnly="True" TextAlignment="Center"
                                 Style="{StaticResource MaterialDesignTextBox}" Height="25"/>

                        <TextBox x:Name="ReplyReg5" Grid.Column="5" Grid.Row="3" Width="50" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 FontSize="11" Margin="3" BorderBrush="LightGray" BorderThickness="1"
                                 HorizontalAlignment="Left" Cursor="Arrow" IsReadOnly="True" TextAlignment="Center"
                                 Style="{StaticResource MaterialDesignTextBox}" Height="25"/>

                        <TextBox x:Name="ReplyReg6" Grid.Column="6" Grid.Row="3" Width="50" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 FontSize="11" Margin="3" BorderBrush="LightGray" BorderThickness="1"
                                 HorizontalAlignment="Left" Cursor="Arrow" IsReadOnly="True" TextAlignment="Center"
                                 Style="{StaticResource MaterialDesignTextBox}" Height="25"/>

                        <TextBox x:Name="ReplyReg7" Grid.Column="7" Grid.Row="3" Width="50" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 FontSize="11" Margin="3" BorderBrush="LightGray" BorderThickness="1"
                                 HorizontalAlignment="Left" Cursor="Arrow" IsReadOnly="True" TextAlignment="Center"
                                 Style="{StaticResource MaterialDesignTextBox}" Height="25"/>

                        <TextBox x:Name="ReplyReg8" Grid.Column="8" Grid.Row="3" Width="50" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 FontSize="11" Margin="3" BorderBrush="LightGray" BorderThickness="1"
                                 HorizontalAlignment="Left" Cursor="Arrow" IsReadOnly="True" TextAlignment="Center"
                                 Style="{StaticResource MaterialDesignTextBox}" Height="25"/>

                        <TextBox x:Name="ReplyReg9" Grid.Column="9" Grid.Row="3" Width="50" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 FontSize="11" Margin="3" BorderBrush="LightGray" BorderThickness="1"
                                 HorizontalAlignment="Left" Cursor="Arrow" IsReadOnly="True" TextAlignment="Center"
                                 Style="{StaticResource MaterialDesignTextBox}" Height="25"/>

                        <TextBox x:Name="ReplyReg10" Grid.Column="10" Grid.Row="3" Width="50" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 FontSize="11" Margin="3" BorderBrush="LightGray" BorderThickness="1"
                                 HorizontalAlignment="Left" Cursor="Arrow" IsReadOnly="True" TextAlignment="Center"
