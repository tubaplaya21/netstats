                        <TextBlock x:Name="lblReg4" Text="Register 4" Grid.Column="4"
                                   Grid.Row="1" FontSize="11" Margin="5,0,5,0" Foreground="{Binding LabelReg4}"
                                   HorizontalAlignment="Left" ToolTip="{Binding RegIp4}"/>

                        <TextBlock x:Name="lblReg5" Text="Register 5" Grid.Column="5"
                                   Grid.Row="1" FontSize="11" Margin="5,0,5,0" Foreground="{Binding LabelReg5}"
