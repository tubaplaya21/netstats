<Window x:Class="Netstats.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:intr="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        Foreground="{DynamicResource MaterialDesignBody}"
        x:Name="MainWindow"
        Title="{Binding Title}" Height="780" Width="700" WindowStyle="None" 
        MaxHeight="{Binding WindowHeight}" MaxWidth="{Binding WindowWidth}"
        WindowState="{Binding CurrentWindowState}"
        Left="{Binding LeftPosition, Mode=OneWayToSource}"
        Top="{Binding TopPosition, Mode=OneWayToSource}"
        AllowsTransparency="True" Background="Transparent"
        MinHeight="762" MinWidth="694"  
        WindowStartupLocation="CenterScreen" Topmost="{Binding IsTopMost, Mode=OneWay}">

    <!--Height="780" Width="700"
        fw:AcrylicWindow.Enabled="False" 
        fw:AcrylicWindow.TintOpacity="0.75"
        fw:AcrylicWindow.NoiseOpacity="0"
        fw:AcrylicWindow.TintColor="#232323"
        fw:AcrylicWindow.AcrylicWindowStyle="NoIcon"-->

    <intr:Interaction.Triggers>
        <intr:EventTrigger EventName="Loaded">
            <intr:InvokeCommandAction Command="{Binding LoadedWindowCommand}"/>
        </intr:EventTrigger>
    </intr:Interaction.Triggers>
    
    <Window.Resources>
        <Style x:Key="VisibleMenu" TargetType="Menu">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ShowingMenu}" Value="False">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            
        </EventTrigger>
    </Window.Triggers>
    
    <Window.InputBindings>
        <KeyBinding Key="LeftAlt" Modifiers="Alt" Command="{Binding ShowMenuCommand}"/>
        <KeyBinding Key="RightAlt" Modifiers="Alt" Command="{Binding ShowMenuCommand}"/>
    </Window.InputBindings>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="{Binding CaptionHeight}" GlassFrameThickness="0" 
                      ResizeBorderThickness="{Binding ResizeBorderThickness}"
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Border Padding="{Binding ShadowThickness, FallbackValue=7}">
        <Border Background="{DynamicResource MaterialDesignPaper}" CornerRadius="8"
                Padding="0" BorderThickness="{Binding BorderThickness}">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" Opacity=".3"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition MinHeight="10">
                        <RowDefinition.Style>
                            <Style TargetType="{x:Type RowDefinition}">
                                <Setter Property="Height" Value="30"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShowingMenu}" Value="False">
                                        <Setter Property="Height" Value="0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </RowDefinition.Style>
                    </RowDefinition>
                    <RowDefinition Height="50" />
                    <RowDefinition MinHeight="150" />
                    <RowDefinition Height="*" />
                    <RowDefinition MinHeight="150" />
                    <RowDefinition Height="*" />
                    <RowDefinition MinHeight="150" />
                    <RowDefinition Height="*" />
                    <RowDefinition MinHeight="150" />
                    <RowDefinition Height="*" />
                    <RowDefinition MinHeight="70" Height="0.15*" />
                    <RowDefinition Height="10" />
                </Grid.RowDefinitions>


                <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3"
                        Background="{DynamicResource MaterialDesignBackground}"
                        CornerRadius="{Binding Radius}">

                    <DockPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3">
                        <Button  Width="25" Height="25" Style="{StaticResource HoverlessButton}"
                                 WindowChrome.IsHitTestVisibleInChrome="True" Padding="0" Margin="5,0,0,0"
                                 materialDesign:ButtonAssist.CornerRadius="0" materialDesign:RippleAssist.RippleSizeMultiplier="500" materialDesign:RippleAssist.IsCentered="True"
                                 Cursor="Arrow" Command="{Binding MenuCommand}"
                                 Foreground="{DynamicResource MaterialDesignBody}">
                            <Image Source="/heartbeat.ico" Width="20" Height="20"/>
                        </Button>
                        <TextBlock Text="{Binding Title}" Padding="5,5"/>
                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" >
                            <Button Width="25" Height="25" Style="{StaticResource ControlButton}"
                                    WindowChrome.IsHitTestVisibleInChrome="True" Padding="0"
                                    materialDesign:ButtonAssist.CornerRadius="0" materialDesign:RippleAssist.RippleSizeMultiplier="500" materialDesign:RippleAssist.IsCentered="True"
                                    ToolTip="Minimize" Cursor="Arrow"
                                    Command="{Binding MinimizeCommand}">
                                <Image Source="/Minimize.png" Width="10" Height="10"/>
                            </Button>
                            <Button Width="25" Height="25" Style="{StaticResource ControlButton}"
                                    WindowChrome.IsHitTestVisibleInChrome="True" materialDesign:RippleAssist.IsDisabled="True"
                                    materialDesign:ButtonAssist.CornerRadius="0" Padding="0"
                                    ToolTip="{Binding MaximizeText}" Cursor="Arrow"
                                    Command="{Binding MaximizeCommand}">
                                <Image Source="{Binding MaximizeSource}" Width="10" Height="10"/>
                            </Button>
                            <Button Width="25" Height="25" Style="{StaticResource WindowCloseButton}"
                                        WindowChrome.IsHitTestVisibleInChrome="True" Padding="0" 
                                        materialDesign:ButtonAssist.CornerRadius="{Binding ButtonRadius}" 
                                        HorizontalAlignment="Center"
                                        ToolTip="Close" Cursor="Arrow"
                                        Command="{Binding ExitCommand}">
                                <Image Source="/Close.png" Width="10" Height="10"/>
                            </Button>

                        </StackPanel>
                    </DockPanel>
                </Border>

                <StackPanel Grid.Column="1" Grid.Row="1">
                    <Menu IsMainMenu="True" FontSize="13" Background="{DynamicResource MaterialDesignPaper}"
                          Style="{StaticResource VisibleMenu}" Height="30" 
                          Foreground="{DynamicResource MaterialDesignBody}">
                        <MenuItem Header="File" Height="30">
                            <MenuItem Header="Check for updates" Command="{Binding CheckUpdateCommand}"/>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock>Dark Mode</TextBlock>
                                <ToggleButton Margin="10,0,0,0" IsChecked="{Binding IsDarkTheme}"
                                              Style="{StaticResource MaterialDesignSwitchAccentToggleButton}"/>
                            </StackPanel>
                    
                    
                            <MenuItem Header="Settings">
                                <DockPanel>
                                    <TextBlock HorizontalAlignment="Left">Wendy's Data</TextBlock>
                                    <ToggleButton Margin="10,0,0,0" IsChecked="{Binding WendysData}"
                                                  HorizontalAlignment="Right"
                                                  Style="{StaticResource MaterialDesignSwitchAccentToggleButton}"/>
                                </DockPanel>
                                <DockPanel>
                                    <TextBlock HorizontalAlignment="Left">Pizza Hut Data</TextBlock>
                                    <ToggleButton Margin="10,0,0,0" IsChecked="{Binding PizzaData}"
                                                  HorizontalAlignment="Right"
                                                  Style="{StaticResource MaterialDesignSwitchAccentToggleButton}"/>
                                </DockPanel>
                            </MenuItem>
                            <MenuItem Header="Exit" Command="{Binding ExitCommand}"/>
                        </MenuItem>
                    </Menu>
                </StackPanel>
        
        
                <DockPanel Grid.Column="1" Grid.Row="2" >
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <TextBlock FontSize="15" Text="Store Number:" VerticalAlignment="Center" />

                        <TextBox Text="{Binding StoreNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="15" Width="50" BorderThickness="2" Height="30" Margin="7,0,0,0" Padding="2,0"
                                 materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource MaterialDesignFlatButtonRipple}" 
                                 MaxLength="4" CaretBrush="{DynamicResource MaterialDesignBody}">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Return" Command="{Binding UpdateCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>

                        <Button Style="{StaticResource MaterialDesignFlatDarkBgButton}" x:Name="btnUpdate" Content="Update" FontSize="12"
                            Margin="10,2" VerticalAlignment="Center" Command="{Binding UpdateCommand}" 
                            IsEnabled="{Binding IsNotRunning}" materialDesign:RippleAssist.Feedback="#65fffd"
                                materialDesign:ButtonAssist.CornerRadius="4"/>

                        <RadioButton Style="{StaticResource MaterialDesignAccentRadioButton}" x:Name="rdoPizza" Content="Pizza Hut" FontSize="12"
                             VerticalAlignment="Center" IsChecked="True" Margin="2,0"/>

                        <RadioButton Style="{StaticResource MaterialDesignAccentRadioButton}" x:Name="rdoWendys" Content="Wendy's" FontSize="12"
                             VerticalAlignment="Center" IsChecked="{Binding IsWendys}" Margin="2,0"/>
                    
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <CheckBox Content="Evan's Box" FontSize="12" Style="{StaticResource MaterialDesignAccentCheckBox}"
                                  Margin="8,2" VerticalAlignment="Center" HorizontalAlignment="Right" Cursor="Hand"
                                  IsChecked="{Binding IsTopMost, Mode=OneWayToSource}"/>

                        <Button Style="{StaticResource MaterialDesignFlatDarkBgButton}" Content="Doall" FontSize="12"
                            Margin="5,2" VerticalAlignment="Center" HorizontalAlignment="Right"
                            Command="{Binding DoallCommand}" materialDesign:RippleAssist.Feedback="#65fffd"
                                materialDesign:ButtonAssist.CornerRadius="4"/>

                        <Button Style="{StaticResource MaterialDesignFlatDarkBgButton}" x:Name="btnDameware" Content="Dameware" FontSize="12"
                                Margin="5,2" VerticalAlignment="Center" HorizontalAlignment="Right"
                                Command="{Binding DamewareCommand}" materialDesign:RippleAssist.Feedback="#65fffd"
                                materialDesign:ButtonAssist.CornerRadius="4"/>
                    </StackPanel>
            

            
                </DockPanel>



                <GroupBox x:Name="grpRegisters" Grid.Column="1" materialDesign:ColorZoneAssist.Mode="PrimaryDark"
                          Grid.Row="3" FontSize="12" Padding="4">
                    <GroupBox.Header>
                        Registers
                    </GroupBox.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition MinWidth="60"/>
                            <ColumnDefinition MinWidth="60"/>
                            <ColumnDefinition MinWidth="60"/>
                            <ColumnDefinition MinWidth="60"/>
                            <ColumnDefinition MinWidth="60"/>
                            <ColumnDefinition MinWidth="60"/>
                            <ColumnDefinition MinWidth="60"/>
                            <ColumnDefinition MinWidth="60"/>
                            <ColumnDefinition MinWidth="60"/>
                            <ColumnDefinition MinWidth="60"/>
                            <ColumnDefinition Width="5"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="0"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="lblReg1" Text="Register 1" Grid.Column="1"
                                   Grid.Row="1" FontSize="11" Margin="5,0,5,0" Foreground="{Binding LabelReg1}"
                                   HorizontalAlignment="Left" ToolTip="{Binding RegIp1}"/>

                        <TextBlock x:Name="lblReg2" Text="Register 2" Grid.Column="2"
                                   Grid.Row="1" FontSize="11" Margin="5,0,5,0" Foreground="{Binding LabelReg2}"
                                   HorizontalAlignment="Left" ToolTip="{Binding RegIp2}"/>

                        <TextBlock x:Name="lblReg3" Text="Register 3" Grid.Column="3"
                                   Grid.Row="1" FontSize="11" Margin="5,0,5,0" Foreground="{Binding LabelReg3}"
